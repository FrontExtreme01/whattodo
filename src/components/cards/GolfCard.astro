---
import { getI18N } from "@/i18n";
import { useTranslatedPath } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const { golf, lang } = Astro.props;
const translatePath = useTranslatedPath(lang);
const url = translatePath(`/golfs/${golf.new_slug}/`);
---

<div class="w-full sm:w-6/12 lg:w-4/12 xl:w-3/12 px-5 py-2 sm:py-5">
    <div class="relative flex flex-wrap sm:flex-col rounded-lg bg-white shadow-lg border-slate-600 h-full">
        <h3 class="mt-7 px-3 sm:hidden block w-full font-bold text-lg text-justify text-green-700">{golf.data.title}</h3>
        <div class="relative p-2.5 w-4/6 sm:w-full">
            <span class="absolute z-10 top-4 left-4 md:top-5 md:left-5 px-2.5 py-1 rounded-md text-sm bg-white font-bold shadow-lg">
                <i class="at-star text-sm text-amber-500"></i>{golf.data.stars}
            </span>
            <a aria-label={i18n.ACCESSIBILITY.GO_TO_TOUR_DETAILS} href={url}>
                <img width="650" height="450" loading="lazy" src={golf.data.image.src} class="w-full h-full object-cover rounded-md cursor-pointer duration-200 hover:scale-110" alt={golf.data.image.alt}>
            </a>
        </div>

        <div class="py-3 px-1.5 sm:px-5 text-justify w-2/6 sm:w-full">
            <h3 class="hidden sm:block font-bold text-base sm:text-lg mb-4 text-center text-green-700">{golf.data.title}</h3>
            <p class="block sm:hidden font-extrabold text-green-700 text-lg sm:text-xl">
                <span class="text-gray-800 text-xs">{i18n.TOUR_PAGE.CARD.FROM}:</span><br> ${golf.data.price} USD
            </p>
            <p class="hidden sm:block text-gray-800 text-base text-justify line-clamp-3 mb-5">
                {golf.data.description}
            </p>
            <ul class="flex justify-around gap-2 flex-wrap mb-4 text-xs sm:text-sm break-all">
                <li class="flex items-center gap-2 border rounded-lg py-1 px-3 bg-white text-slate-600 hover:text-white hover:bg-green-600 transition duration-200">
                    <i class="at-clock text-green-700"></i>{golf.data.duration}
                </li>
                <li class="flex items-center gap-2 border rounded-lg py-1 px-3 bg-white text-slate-600 hover:text-white hover:bg-green-600 transition duration-200">
                    <i class="at-messages-text text-green-700"></i>{golf.data.reviews}
                </li>
                <li class="flex items-center gap-2 border rounded-lg py-1 px-3 bg-white text-slate-600 hover:text-white hover:bg-green-600 transition duration-200">
                    <i class="at-boxing-ball text-green-700"></i>{golf.data.holes}
                </li>
                <li class="flex items-center gap-2 border rounded-lg py-1 px-3 bg-white text-slate-600 hover:text-white hover:bg-green-600 transition duration-200">
                    <i class="at-destination-route text-green-700"></i>{golf.data.yards}
                </li>
            </ul>
        </div>
        
        <div class="w-full flex flex-wrap justify-evenly mb-5 lg:px-5 gap-y-3 mt-auto">
            <div class="hidden sm:block w-full text-center my-2">
                <p class="font-extrabold text-green-700 text-lg sm:text-xl"><span class="text-gray-800 text-sm">{i18n.TOUR_PAGE.CARD.FROM}:</span> ${golf.data.price} USD</p>
            </div>
            {golf.data.bokun != '' && <a aria-label="" href={golf.data.bokun} class="text-sm sm:text-base w-auto text-center bg-orange-600 hover:bg-orange-500 text-white font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline" target="_blank">{i18n.TOUR_PAGE.CARD.BUTTON_BOOK_NOW}</a>}
            <a aria-label={i18n.ACCESSIBILITY.GO_TO_TOUR_DETAILS} href={url} class="text-sm sm:text-base w-auto text-center bg-slate-200 hover:bg-slate-100 text-black font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline">{i18n.TOUR_PAGE.CARD.BUTTON_MORE}</a>
        </div>
    </div>
</div>