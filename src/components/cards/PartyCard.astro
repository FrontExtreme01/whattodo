---
import { getI18N } from "@/i18n";
import { useTranslatedPath } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const { party, lang } = Astro.props;
const translatePath = useTranslatedPath(lang);
const url = translatePath(`/party/${party.new_slug}/`);
---

<div class="w-full sm:w-6/12 lg:w-4/12 xl:w-3/12 px-5 py-1 sm:py-5">
    <div class="relative flex flex-wrap sm:flex-col rounded-lg bg-white shadow-lg border-slate-600 h-full">
        <h3 class="mt-7 px-3 sm:hidden block w-full font-extrabold text-lg text-justify text-purple-700">{party.data.title}</h3>
        <div class="relative p-2.5 w-4/6 sm:w-full">
            <span class="absolute z-10 top-4 left-4 md:top-5 md:left-5 px-2.5 py-1 rounded-md text-sm bg-white font-bold shadow-lg">
                <i class="at-star text-sm text-amber-500"></i>{party.data.stars}
            </span>
            <a aria-label={i18n.ACCESSIBILITY.GO_TO_TOUR_DETAILS} href={url}>
                <img width="650" height="450" loading="lazy" src={party.data.image.src} class="w-full h-full object-cover rounded-md cursor-pointer duration-200 hover:scale-110" alt={party.data.image.alt}>
            </a>
        </div>

        <div class="py-3 px-1.5 sm:px-5 sm:py-1 text-justify w-2/6 sm:w-full">
            <h3 class="hidden sm:block font-bold text-base sm:text-lg mb-4 text-center text-purple-700">{party.data.title}</h3>
            {party.data.lastMinute && (
                <p class="block sm:hidden font-extrabold text-red-500 text-sm line-through">
                    ${(party.data.price * 1.4).toFixed(0)} USD
                </p>
            )}
            <p class="block sm:hidden font-extrabold text-purple-700 text-xl">
                <span class="text-gray-800 text-xs">{i18n.TOUR_PAGE.CARD.FROM}:</span><br> ${party.data.price} USD
            </p>

            <ul class="flex flex-col gap-2 sm:px-5 my-4 text-xs sm:text-sm text-start">
                <li class="flex items-center gap-2 text-slate-600">
                    <i class="at-clock text-purple-700"></i>{party.data.duration}
                </li>
                <li class="hidden sm:flex items-center gap-2 text-slate-600">
                    <i class="at-star-ticket-coupon text-purple-700"></i>{party.data.admission}
                </li>
                <li class="flex items-center gap-2 text-slate-600">
                    <i class="at-martini-straw-lime text-purple-700"></i>{party.data.consumption}
                </li>
                <li class="hidden sm:flex items-center gap-2 text-slate-600">
                    <i class="at-language-translation text-purple-700"></i><b>{i18n.DETAILS_CONTENT.GENERAL.OFFERED_IN}:</b> {i18n.DETAILS_CONTENT.GENERAL.OFFERED_LANG}
                </li>
            </ul>
        </div>
        
        <div class="w-full flex flex-wrap justify-evenly mb-5 lg:px-5 gap-y-3 mt-auto">
            <div class="hidden sm:block w-full text-center my-2">
                <p class="font-extrabold text-purple-700 text-lg sm:text-xl"><span class="text-gray-800 text-sm">{i18n.TOUR_PAGE.CARD.FROM}:</span> ${party.data.price} USD</p>
            </div>
            {party.data.bokun != '' && <a aria-label="" href={party.data.bokun} class="text-sm sm:text-base w-auto text-center bg-purple-700 hover:bg-purple-500 text-white font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline" target="_blank">{i18n.TOUR_PAGE.CARD.BUTTON_BOOK_NOW}</a>}
            <a aria-label={i18n.ACCESSIBILITY.GO_TO_TOUR_DETAILS} href={url} class="text-sm sm:text-base w-auto text-center bg-slate-200 hover:bg-slate-100 text-black font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline">{i18n.TOUR_PAGE.CARD.BUTTON_MORE}</a>
        </div>
    </div>
</div>