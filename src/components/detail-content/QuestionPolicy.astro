---
const { i18n } = Astro.props;
---

<section class="flex flex-wrap w-full gap-y-7">
    <div class="w-full md:w-1/2 sm:px-5">
        <div class="shadow-md border border-slate-200 rounded-lg py-4 px-8 h-full flex justify-center flex-col">
            <h4 class="text-lg font-bold mb-4 text-gray-900">{i18n.CANCELLATION_POLICY.TITLE}</h4>
            <p class="text-base mb-2">{i18n.CANCELLATION_POLICY.DESCRIPTION}</p>
        </div>
    </div>
    <div class="w-full md:w-1/2 sm:px-5">
        <div class="shadow-md border border-slate-200 rounded-lg py-4 px-8 h-full flex justify-center flex-col">
            <h4 class="text-lg font-bold mb-4 text-gray-900">
                {i18n.QUESTIONS.TITLE}
            </h4>
            <p class="text-base mb-2">{i18n.QUESTIONS.DESCRIPTION}</p>
        </div>
    </div>
</section>
