---
const { timeline } = Astro.props;
---

<style>
    .timeline {
        position: relative;
        margin-top: 30px;
        list-style: none;
    }

    .timeline:before {
        content: "";
        position: absolute;
        top: 15px;
        bottom: 0;
        width: 4px;
        height: 92%;
        background: #063;
        left: 20px;
    }

    .timeline-item {
        position: relative;
        padding-top: 10px;
    }

    .timeline-item:before {
        content: "";
        display: table;
        clear: both;
    }

    .timeline-item .timeline-icon {
        position: absolute;
        top: 10%;
        left: 2px;
        width: 40px;
        height: 40px;
        background: #063;
        border-radius: 50%;
        z-index: 10;
        color: #fff;
        display: grid;
        place-items: center;
        font-size: 20px;
        font-weight: bold;
    }

    .timeline-item .timeline-content {
        position: relative;
        width: 75%;

        & p {
            margin: 0px 0 20px 0;
        }
    }

    .timeline-item:nth-child(odd) .timeline-content {
        left: 70px;
    }

    .timeline-item:nth-child(even) .timeline-content {
        left: 70px;
    }

    .timeline-item h3 {
        margin-top: 0;
        color: #063;

        & span {
            color: #a4a4a4;
        }
    }
</style>

<div class="timeline">
    {timeline.map((item) => (
        <div class="timeline-item">
            <div class="timeline-icon">
                <i class={`at-${item.icon} font-semibold`}></i>
            </div>
            <div class="timeline-content">
                <h3 class="text-xl md:text-2xl font-bold text-green-700 ">{item.title} <span>{item.date}</span></h3>
                <p class="text-base/loose md:text-xl/loose">{item.description}</p>
            </div>
        </div>
    ))}
</div>
