---
import { separador } from "@/img/allImages";
const { title, description } = Astro.props;
---

<section class="container mx-auto px-10 md:px-20 py-10 md:py-20">
    <img src={separador.src} alt="" class="mx-auto mb-8" />
    <h1 class="text-orange-600 text-2xl md:text-4xl font-bold text-center mb-8">
        {title}
    </h1>
    <p class="text-base md:text-xl/loose text-center md:w-8/12 mx-auto">
        {description}
    </p>
</section>
